<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/c"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="405dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:text="GESTION TELEFONICA "
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="411dp"
        android:layout_height="55dp"
        android:layout_marginBottom="124dp"
        android:text="Buscar Municipio"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnMun"
        android:layout_width="411dp"
        android:layout_height="51dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="56dp"
        android:text="ADMINISTRAR MUNICIPIOS"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSearch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerMun"
        android:layout_width="409dp"
        android:layout_height="44dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMun"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="407dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/btnDeptos"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnDeptos"
        android:layout_width="413dp"
        android:layout_height="54dp"
        android:layout_marginBottom="92dp"
        android:text="Administrar Departamentos"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMun"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>